<div class="main-margin">
  <h1>Log in</h1>

  <form method="POST" action="/log-in">
    <div class="unlogged-field unlogged-form">
      <p>
        <label for="email">
          Email:
          <input
            id="email"
            type="text"
            name="email"
            placeholder="name@email.com"
          />
        </label>
      </p>
      <p>
        <label for="password3">
          Password:
          <input
            id="password3"
            type="text"
            name="password"
            placeholder="********"
          />
        </label>
      </p>
    </div>

    <input
      type="submit"
      class="unlogged-buttons"
      value="Log In to Chalkboard"
    />
  </form>
</div>
